---
import CallToAction from "../components/CallToAction.astro"
---

<section id="Inicio" class="presentation">
  <div class="presentation-info">
    <div class="presentation-responsive">
      <h1 class="presentation-title">Pablo Oyarce R.</h1>
      <p class="presentation-parr">
        Desarrollador & Dise√±ador Web creativo y entusiasta especializado en
        experiencia de usuario e interfaces web.
      </p>
    </div>
    <CallToAction />
  </div>
  <figure class="presentation-image">
    <figcaption class="presentation-fig">Developer</figcaption>
  </figure>
</section>

<style>
  .presentation {
    padding-left: 5rem;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #01200f;
  }

  .presentation-title {
    padding-top: 5rem;
    color: #3b1f2b;
    font-family: "Playfair Display", serif;
    font-size: 4.7vw;
    font-weight: 600;
    margin: 0;
  }

  .presentation-parr {
    color: #6e6767;
    font-family: Inter;
    font-size: 22px;
    font-style: normal;
    font-weight: 400;
    line-height: 2rem;
    width: 27vw;
  }

  .presentation-info {
    display: flex;
    flex-direction: column;
    gap: 12rem;
  }

  .presentation-image {
    background-image: url("/img/analogo2.webp");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    width: 40rem;
    aspect-ratio: 10 / 12;
    margin: 0;
  }

  .presentation-image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.25));
  }

  .presentation-fig {
    text-transform: uppercase;
    position: absolute;
    top: 40%;
    left: 30%;
    color: #f8fbee;
    font-family: Playfair Display;
    transform: rotate(-90deg);
    font-size: 125px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }

  @media screen and (max-width: 925px) {
    .presentation {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 0;
    }

    .presentation-info {
      text-align: center;
    }

    .presentation-responsive {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .presentation-title {
      font-size: 6.5vw;
    }
  }
  @media screen and (max-width: 1420px) {
    .presentation-parr {
      width: 65%;
      font-size: 19px;
    }

    .presentation-fig {
      font-size: 100px;
      left: 25%;
    }
  }
</style>
