---
import CallToAction from "../components/CallToAction.astro"
---

<section id="Inicio" class="presentation">
  <div class="presentation-info">
    <div>
      <h1 class="presentation-title">Pablo Oyarce R.</h1>
      <p class="presentation-parr">
        Desarrollador & Dise√±ador Web creativo y entusiasta especializado en
        experiencia de usuario e interfaces web.
      </p>
    </div>
    <CallToAction />
  </div>
  <figure class="presentation-image">
    <figcaption class="presentation-fig">Developer</figcaption>
  </figure>
</section>

<style>
  .presentation {
    padding-left: 5rem;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #01200f;
  }

  .presentation-title {
    padding-top: 5rem;
    color: #3b1f2b;
    font-family: "Playfair Display", serif;
    font-size: 4.7vw;
    font-weight: 600;
    margin: 0;
  }

  .presentation-parr {
    color: #7f7979;
    font-family: Inter;
    font-size: 1.2vw;
    font-style: normal;
    font-weight: 400;
    line-height: 2rem;
    width: 27vw;
  }

  .presentation-info {
    display: flex;
    flex-direction: column;
    gap: 12rem;
  }

  .presentation-image {
    background-image: url("/img/analogo2.webp");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    width: 40rem;
    aspect-ratio: 10 / 12;
    margin: 0;
  }

  .presentation-fig {
    text-transform: uppercase;
    position: absolute;
    top: 40%;
    left: 30%;
    color: #f8fbee;
    font-family: Playfair Display;
    transform: rotate(-90deg);
    font-size: 125px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }

  @media screen and (max-width: 700px) {
    .presentation-parr {
      width: 90%;
      font-size: 19px;
    }
  }
</style>
