---
const { proyectTitle, proyectDescription, proyectImage, redirect } = Astro.props
---

<article class="proyect-card">
  <header class="proyect-card-info">
    <h3 class="proyect-card-title">
      <a target="_blank" href={redirect}>{proyectTitle}</a>
    </h3>
    <p class="proyect-card-description">{proyectDescription}</p>
  </header>
  <figure class="proyect-card-image">
    <img src=`img/${proyectImage}.webp` alt=`${proyectTitle}` />
  </figure>
</article>

<style>
  .proyect-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rem 0;
    border-bottom: 1px solid #01200f;
  }

  .proyect-card-info {
    padding-left: 5rem;
  }

  .proyect-card-title {
    font-size: 40px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .proyect-card-title a {
    text-decoration: none;
    color: #3b1f2b;
    font-family: Playfair Display;
  }

  .proyect-card-description {
    color: #7f7979;
    max-width: 30rem;
    font-family: Inter;
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .proyect-card-image {
    margin: 0;
    width: 60rem;
    aspect-ratio: 16 / 9;
  }

  .proyect-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
