---
const { proyectTitle, proyectDescription, proyectImage, redirect } = Astro.props
---

<a target="_blank" href={redirect} class="proyect-card">
  <header class="proyect-card-info">
    <h3 class="proyect-card-title">
      {proyectTitle}
    </h3>
    <p class="proyect-card-description">{proyectDescription}</p>
  </header>
  <figure class="proyect-card-image">
    <img src=`img/${proyectImage}.webp` alt=`${proyectTitle}` />
  </figure>
</a>

<style>
  .proyect-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rem 0;
    border-bottom: 1px solid #01200f;
    text-decoration: none;
    perspective: 100px;
  }

  .proyect-card:hover .proyect-card-image img {
    filter: contrast(1);
    transform: scale(1.2);
  }

  .proyect-card:hover .proyect-card-title:before {
    width: 70%;
  }

  .proyect-card-info {
    padding-left: 5rem;
  }

  .proyect-card-title {
    font-size: 40px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    color: #3b1f2b;
    position: relative;
  }

  .proyect-card-title:before {
    content: '';
    display: block;
    position: absolute;
    background-color: #3b1f2b;
    bottom: 0;
    left: 0;
    height: 2px;
    width: 0%;
    transition: all 0.5s;
  }

  .proyect-card-description {
    color: #6e6767;
    max-width: 30rem;
    font-family: Inter;
    font-size: 19px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.7rem;
  }

  .proyect-card-image {
    margin: 0;
    width: 60rem;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .proyect-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: sepia(0.3);
    transition: all 0.7s;
  }

  @media screen and (max-width: 925px) {
    .proyect-card {
      padding: 2rem 1rem 2rem 1rem;
      flex-direction: column;
      align-items: flex-start;
      align-items: center;
    }

    .proyect-card-info {
      padding: 0;
    }

    .proyect-card-image {
      width: 60%;
    }

    .proyect-card-title {
      font-size: 2rem;
      text-align: center;
    }

    .proyect-card-info {
      font-size: 0.9rem;
      text-align: center;
    }
  }
</style>
